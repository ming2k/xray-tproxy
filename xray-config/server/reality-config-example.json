// XTLS/REALITY reference: https://github.com/XTLS/REALITY
// Xray installation: https://github.com/XTLS/Xray-install
{
  "inbounds": [
    {
      "listen": "0.0.0.0",
      "port": <YOUR_PORT_NUMBER:10443>,
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "id": "<UUID:a1b2c3d4-e5f6-7890-abcd-ef1234567890>",
            "flow": "xtls-rprx-vision"
          }
        ],
        "decryption": "none"
      },
      "streamSettings": {
        "network": "tcp",
        "security": "reality",
        "realitySettings": {
          "show": true,
          "dest": "<DEST_DOMAIN:www.lovelive-anime.jp:443>",
          "xver": 0,
          "serverNames": [
            "<SERVER_NAME:www.lovelive-anime.jp>"
          ],
          "privateKey": "<PRIVATE_KEY:SGuVHaAwREi_8KKTRxM8u3jEV3Ite0KLgqIYLuBIKno>",
          "shortIds": [
            "<SHORT_ID:0123456789abcdef>"
            //..
          ]
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls",
          "quic"
        ]
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "tag": "direct"
    }
  ]
}
// vim: set ft=jsonc:
